{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:all",
    "parserOptions": {
        "ecmaVersion": 2017
    },
    "rules": {
        "func-style": "off",
        "linebreak-style": ["error", "windows"],
        "max-len": ["error", 120],
        "no-bitwise": "off",
        "no-magic-numbers": "off",
        "one-var": "off",
        "padded-blocks": "off",
        "space-before-function-paren": "off"
    }
}